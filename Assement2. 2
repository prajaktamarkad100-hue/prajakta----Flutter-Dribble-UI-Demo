import 'package:flutter/material.dart';
import 'package:go_router/go_router.dart';

void main() => runApp(const MyApp());

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    final GoRouter router = GoRouter(
      routes: [
        GoRoute(
          path: '/',
          builder: (context, state) => const HomeScreen(),
        ),
        GoRoute(
          path: '/product/:id',
          builder: (context, state) {
            final id = state.params['id']!;
            final product = dummyProducts.firstWhere((p) => p.id == id);
            return ProductDetailsScreen(product: product);
          },
        ),
      ],
    );

    return MaterialApp.router(
      title: 'Grocery App',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(primarySwatch: Colors.green),
      routerConfig: router,
    );
  }
}

// üß© Product Model
class Product {
  final String id;
  final String name;
  final String imageUrl;
  final double price;
  final double discount;
  final double rating;
  final String deliveryTime;

  Product({
    required this.id,
    required this.name,
    required this.imageUrl,
    required this.price,
    required this.discount,
    required this.rating,
    required this.deliveryTime,
  });
}

// üß™ Dummy Data
final dummyProducts = [
  Product(
    id: 'p1',
    name: 'Fresh Broccoli',
    imageUrl: 'https://via.placeholder.com/150',
    price: 2.99,
    discount: 10,
    rating: 4.5,
    deliveryTime: '30 mins',
  ),
  Product(
    id: 'p2',
    name: 'Organic Carrots',
    imageUrl: 'https://via.placeholder.com/150',
    price: 1.99,
    discount: 5,
    rating: 4.0,
    deliveryTime: '25 mins',
  ),
];

// üè† Home Screen
class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Grocery App')),
      body: ListView.builder(
        itemCount: dummyProducts.length,
        itemBuilder: (ctx, index) =>
            ProductCard(product: dummyProducts[index]),
      ),
      bottomNavigationBar: const BottomNavBar(),
    );
  }
}

// üì¶ Product Card
class ProductCard extends StatelessWidget {
  final Product product;

  const ProductCard({super.key, required this.product});

  @override
  Widget build(BuildContext context) {
    return InkWell(
      onTap: () => context.go('/product/${product.id}'),
      child: Card(
        margin: const EdgeInsets.all(10),
        child: Row(
          children: [
            Image.network(product.imageUrl,
                width: 100, height: 100, fit: BoxFit.cover),
            const SizedBox(width: 10),
            Expanded(
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Text(product.name,
                      style: const TextStyle(
                          fontSize: 18, fontWeight: FontWeight.bold)),
                  Text('\$${product.price}'),
                  Text('‚≠ê ${product.rating}'),
                ],
              ),
            )
          ],
        ),
      ),
    );
  }
}

// ü™¥ Product Details Screen
class ProductDetailsScreen extends StatelessWidget {
  final Product product;

  const ProductDetailsScreen({super.key, required this.product});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text(product.name)),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          children: [
            Image.network(product.imageUrl, height: 200),
            const SizedBox(height: 16),
            Text('\$${product.price}', style: const TextStyle(fontSize: 22)),
            Text('Discount: ${product.discount}%'),
            Text('Rating: ${product.rating} ‚≠ê'),
            Text('Delivery: ${product.deliveryTime}'),
            const SizedBox(height: 10),
            const Text(
              'This is a placeholder description for the product. You can customize this.',
              style: TextStyle(fontSize: 16),
            ),
          ],
        ),
      ),
    );
  }
}

// üß≠ Bottom Navigation Bar
class BottomNavBar extends StatelessWidget {
  const BottomNavBar({super.key});

  @override
  Widget build(BuildContext context) {
    return BottomNavigationBar(
      currentIndex: 0,
      onTap: (index) {}, // Placeholder
      items: const [
        BottomNavigationBarItem(icon: Icon(Icons.home), label: 'Home'),
        BottomNavigationBarItem(icon: Icon(Icons.category), label: 'Categories'),
        BottomNavigationBarItem(icon: Icon(Icons.favorite), label: 'Favorites'),
        BottomNavigationBarItem(icon: Icon(Icons.person), label: 'Profile'),
      ],
    );
  }
}


